@model List<Todo>

<div class="userProfileContent">
    @if (Model?.Count == 0)
    {
        <p class="text-danger">Haven`t any todos yet.</p>
    }
    else
    {

    <ul class="simpleListings" style="list-style-type:none">
        @foreach (var todo in Model)
        {
            <li>
                <div class="title">@Html.ActionLink(todo.Name, "index", "todo", todo)</div>
                <div class="info">@todo.CreatedAt</div>

                @if (todo.IsComplete)
                {
                    <p class="text-success">Completed</p>
                }
                else
                {
                    <p class="text-danger">Uncompleted</p>
                }
            </li>
        }

    </ul>
    }
</div>